<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/tv_dialog_group_title"
        android:text="그룹을 선택해주세요."
        android:textSize="15sp"
        android:textAlignment="center"
        android:background="@color/mint"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@+id/tv_dialog_group_title"
        android:id="@+id/bt_new_group"
        android:text="새 그룹 만들기"
        android:textAlignment="center"
        android:background="@color/brightMint"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_new_group"
        android:layout_marginBottom="70dp"
        android:id="@+id/rv_dialog_group"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="10">

        <Button
            android:id="@+id/bt_dialog_group_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="취소"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_weight="5"
            android:background="@color/brightGray" />

        <Button
            android:id="@+id/bt_dialog_group_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="저장"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_weight="5"
            android:background="@color/brightMint" />

    </LinearLayout>

</RelativeLayout>